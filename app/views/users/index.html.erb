<div class="container">
<div class="row">
<body>
<div class="col-xs-3">
<%= render 'books/info', user: @user %>
<%= render 'books/list', book: @book %>
</div>


<div class="col-xs-9">
<h1>Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %></td>
      <td><%= user.name %></td>
    <td><%= link_to 'Show', user_path(user.id) %></td>
  </tr>
  <% end %>
</tbody>
</table>
<p class="text-right">CopyRight Infratop.inc</p>
</div>
</body>
</div>
</div>