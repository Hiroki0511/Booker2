<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
<div class="row">
<body>
<div class="col-xs-3">
<%= render 'books/info', user: @user %>
<%= render 'books/list', book: @book %>
</div>



<div class="col-xs-9">
<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
  <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %></td>
      <td><%= link_to book_path(book.id) do %>
        <%= book.title%>
        <% end %>
      </td>
    <td><%= book.body%></td>
  </tr>
  <% end %>
</tbody>
</table>
<p class="text-right">CopyRight Infratop.inc</p>
</div>
</body>
</div>
</div>